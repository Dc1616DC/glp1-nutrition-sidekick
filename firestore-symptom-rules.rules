rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own meal logs
    match /userMeals/{userId}/meals/{mealId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own symptom logs - NEW RULES
    match /userSymptoms/{userId}/logs/{logId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to list their own symptom logs - NEW RULES  
    match /userSymptoms/{userId}/logs {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admin access for meal imports (restricted to specific email)
    match /meals/{mealId} {
      allow read: if true; // All authenticated users can read meals
      allow write: if request.auth != null && request.auth.token.email == 'daniel@betterish.co';
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}